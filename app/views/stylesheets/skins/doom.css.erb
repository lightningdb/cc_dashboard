/* 'doom' skin styles */

body { background: #000e0e; }
body.building { background: url(/images/skins/doom/background/building.jpg); }
body.healthy { background: url(/images/skins/doom/background/healthy.jpg); }
body.sick { background: url(/images/skins/doom/background/sick.jpg); }

.Error { background: #882132; color: #fff; }

.Exception.Building { background: #440000 url(/images/skins/doom/exception/building.gif) no-repeat 5px 5px; color: #fff; }
.Exception.CheckingModifications { background: #440000; color: #fff; }
.Exception.Pending { background: #440000; color: #fff; }
.Exception.Sleeping { background: #440000 url(/images/skins/doom/exception/sleeping.gif) no-repeat 5px 0; color: #fff; }
.Exception.Unknown { background: #440000; color: #fff; }

.Failure.Building { background: #ff9933 url(/images/skins/doom/failure/building.gif) no-repeat 5px 5px; color: #fff; }
.Failure.CheckingModifications { background: #882132 url(/images/skins/doom/failure/checking.gif) no-repeat 5px 0; color: #fff; }
.Failure.Pending { background: #882132 url(/images/skins/doom/failure/checking.gif) no-repeat 5px 0; color: #fff; }
.Failure.Sleeping { background: #882132 url(/images/skins/doom/failure/sleeping.gif) no-repeat 5px 0; color: #fff; }
.Failure.Unknown { background: #882132 url(/images/skins/doom/failure/sleeping.gif) no-repeat 5px 0; color: #fff; }

.Success.Building { background: #ff9933 url(/images/skins/doom/success/building.gif) no-repeat 5px 5px; color: #040302; }
.Success.CheckingModifications { background: #2bca5b; color: #040302; }
.Success.Pending { background: #2bca5b; color: #040302; }
.Success.Sleeping { background: #2bca5b; color: #040302; }
.Success.Unknown { background: #2bca5b; color: #040302; }

.Unknown.Building { background: #707070 url(/images/skins/doom/unknown/building.gif) no-repeat 5px 5px; color: #040302; }
.Unknown.CheckingModifications { background: #707070; color: #040302; }
.Unknown.Pending { background: #707070; color: #040302; }
.Unknown.Sleeping { background: #707070; color: #040302; }
.Unknown.Unknown { background: #707070; color: #040302; }
